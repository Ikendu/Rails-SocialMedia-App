<% if user_signed_in? %>
<br>
<div class="table-responsive">
<table class="table table-hover table-bordered table-striped">
  <thead class="bg-secondary">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Twitter</th>
  <!--<th>User id</th>-->
      <th colspan="1"></th>
    </tr>
  </thead>
  <tbody>
    
    <% @friends.each do |friend|%>
    <tr>
      <% if current_user == friend.user %>
      <td><%= link_to( friend.first_name+" "+friend.last_name, friend) %></td>
      <td><%= friend.email %></td>
      <td><%= friend.twitter %></td>
 <!-- <td><% friend.user_id %></td>-->
      <td><%= button_to "Delete", friend, method: :delete,  class:"btn btn-danger btn-sm" %></td>
    </tr>
    <% end %>
    <% end %>
  </tbody>
</table>
</div>
<%= link_to "New friend", new_friend_path, class:"btn btn-info" %>
<%= link_to ' All Friends', friends_path, class:"btn btn-primary"%>

<% else %>

<h1>Home#index</h1>
<p>Find me in app/views/home/index.html.erb</p>

<% end %>

  